# BlackRoad Operator Configuration
# Copy this to .env and fill in your values

# === API Keys ===
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key

# === Salesforce ===
SALESFORCE_USERNAME=your-salesforce-username
SALESFORCE_PASSWORD=your-salesforce-password
SALESFORCE_TOKEN=your-salesforce-security-token

# === Pi Cluster Endpoints ===
HAILO_ENDPOINT=http://octavia.local:8080
LUCIDIA_ENDPOINT=http://lucidia.local:8080
ARIA_ENDPOINT=http://aria.local:8080
ALICE_ENDPOINT=http://alice.local:8080

# === Model Configuration ===
DEFAULT_MODEL=claude-sonnet-4-20250514
FALLBACK_MODEL=gpt-4

# === Service Configuration ===
MAX_RETRIES=3
TIMEOUT_SECONDS=30
LOG_LEVEL=INFO
AUDIT_LOG_PATH=/var/log/blackroad/audit.jsonl

# === Redis ===
REDIS_URL=redis://localhost:6379
